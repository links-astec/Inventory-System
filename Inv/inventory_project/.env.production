# Production Environment Variables for PythonAnywhere
# Copy these variables to your PythonAnywhere environment

# Django Configuration
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourusername.pythonanywhere.com
DJANGO_SETTINGS_MODULE=inventory_project.settings_production

# Database Configuration (ngrok tunnel)
DB_NAME=inventory_db
DB_USER=postgres
DB_PASSWORD=your_postgresql_password
DB_HOST=2.tcp.ngrok.io
DB_PORT=12345

# Time Zone
DJANGO_TIME_ZONE=UTC

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@inventory.com

# Security (Generate new secret key for production)
# You can generate a new secret key using:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
